{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ES2020"],
    "outDir": "dist-test",
    "rootDir": "test",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "mocha", "vscode"]
  },
  "include": ["test/**/*"],
  "exclude": ["dist", "dist-test", "node_modules"]
}
